{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNEXT",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "lib": ["ESNEXT", "DOM"],
    "sourceMap": true,
    "outDir": "./dist/"
  },
  "include": ["src/**/*"]
}
